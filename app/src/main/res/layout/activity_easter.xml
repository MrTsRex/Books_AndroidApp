<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.books.saumy.books.easter">

    <TextView android:text="We are the Developers of this Awesome App!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView7" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/dev" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView4"
        android:text="And This is our awesome project guide.Thank you Sir_/\\_"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@id/txt"
        android:layout_marginTop="10dp"
        android:src="@drawable/photo"/>
</RelativeLayout>
